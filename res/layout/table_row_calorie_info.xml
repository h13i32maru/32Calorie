<?xml version="1.0" encoding="utf-8"?>
<TableRow 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/round_corner_calorie_info_unselect"
        android:layout_weight="1">
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/round_corner_icon">
		    <TextView
		        android:layout_width="16dp"
		        android:layout_height="16dp"
		        android:id="@+id/caloire_icon"/>
	    </LinearLayout>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:id="@+id/calorie_name"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:text="0"
	        android:id="@+id/calorie_value"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:layout_marginLeft="8dp"
	        android:id="@+id/calorie_delta"
	        android:textSize="10sp"/>
        
    </LinearLayout>
</TableRow>
